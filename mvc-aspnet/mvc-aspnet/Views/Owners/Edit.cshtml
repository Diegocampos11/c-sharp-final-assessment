@model mvc_aspnet.Models.Owner

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Owner</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
